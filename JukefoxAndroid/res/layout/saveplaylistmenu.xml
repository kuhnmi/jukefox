<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"		
	android:background="@drawable/d049_bg_overlay">
	
	<View android:layout_width="fill_parent"
		android:layout_height="5dip"/>	
	
	<TextView 
		android:text="@string/save_playlist_as" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"		
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_gravity="center_horizontal"/>											
	
	<View android:layout_width="fill_parent"
		android:layout_height="5dip"/>
	
	<EditText 
		android:id="@+id/savePlaylistName"				
   		android:layout_width="fill_parent"	   		
   		android:layout_height="wrap_content"
   		android:background="@drawable/d046_bg_button"
   		android:singleLine="true"/>

    <View android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:background="#ff555555"/> 
    
     <RelativeLayout 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|center_horizontal"
			android:gravity="bottom|center_horizontal">
    	
		<ListView 
			android:fastScrollEnabled="true"
			android:id="@+id/savePlaylistNameList"				
	   		android:layout_width="fill_parent"	    		
	   		android:layout_height="wrap_content"
	   		android:cacheColorHint="#00000000"
	   		android:paddingLeft="10dip"
	   		android:paddingRight="10dip"
	   		android:paddingBottom="64sp"/> 
		
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|center_horizontal">
			
			<View android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"/>
			
			<LinearLayout android:orientation="horizontal"
				android:id="@+id/savePlaylistButton"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/d046_bg_button"
				android:layout_gravity="bottom|center_horizontal"
				android:gravity="bottom|center_horizontal">
				<ImageView android:src="@drawable/d121_save_inverted"
					android:layout_width="50sp"
					android:layout_height="50sp"			          	
		          	android:visibility="visible"/>	
				<TextView 
					android:text="@string/save" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:textColor="@color/button_text_color"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_gravity="center_vertical|left"/>
			</LinearLayout>		   		   
		</LinearLayout>
	</RelativeLayout>

	<View android:layout_width="fill_parent"
		android:layout_height="5dip"/>

</LinearLayout>

