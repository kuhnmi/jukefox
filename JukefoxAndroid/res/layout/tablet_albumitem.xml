<?xml version="1.0" encoding="utf-8"?>
<ch.ethz.dcg.pancho3.tablet.widget.AlbumImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="240dip"
        android:layout_height="240dip"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:padding="15dp" >
    <ImageView 
            android:id="@+id/image"
			android:layout_height="220dp"
			android:layout_width="220dp"
			android:scaleType="fitXY"
            android:layout_gravity="center" />
    <LinearLayout
            android:id="@+id/shade"
            android:layout_width="220dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:gravity="center_vertical" >
        <TextView android:id="@+id/albumText"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:layout_width="wrap_content"
               android:paddingLeft="9dip"
               android:layout_height="32dip"
               android:ellipsize="marquee"
               android:singleLine="true"
               android:gravity="center"
               android:textColor="@color/text_color" />
        <TextView android:id="@+id/artistText"
               android:textAppearance="?android:attr/textAppearanceSmall"
               android:singleLine="true"
               android:ellipsize="end"
               android:paddingLeft="9dip"
               android:layout_width="wrap_content"
               android:layout_height="32dip"
               android:gravity="center"
               android:textColor="@color/text_color" />
    </LinearLayout>
</ch.ethz.dcg.pancho3.tablet.widget.AlbumImageView>
