<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#00000000">			
	
		<RelativeLayout 
			android:layout_width="fill_parent"		
			android:layout_height="fill_parent"
			android:layout_gravity="center"
			android:layout_weight="0">
			
			<TextView android:id="@+id/widget_label_track"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_weight="1" 
				android:text="@string/widget_start_text"
				android:ellipsize="marquee"
				android:singleLine="true"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:visibility="gone"
				android:marqueeRepeatLimit="marquee_forever"/>
				
			<ImageView android:id="@+id/widgetAlbumArt"
				android:src="@drawable/d022_app_icon"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:scaleType="fitCenter"
				android:layout_weight="1"
				android:layout_gravity="bottom"/>
			<LinearLayout android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_gravity="center">
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"/>
				<LinearLayout android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center">
	
					<ImageView android:id="@+id/widgetPreviousButton"
						android:src="@drawable/d003_previous_button"						
						android:layout_height="60dip"
						android:layout_width="60dip"
						android:maxWidth="60dip"
						android:maxHeight="60dip"
						android:layout_gravity="center"
					/>
					
					<ImageView android:id="@+id/widgetPlayPauseButton"
						android:src="@drawable/d017_play_button"
						android:layout_height="60dip"
						android:layout_width="60dip"
						android:maxWidth="60dip"
						android:maxHeight="60dip"
						android:layout_gravity="center"
					/>
				
					<ImageView android:id="@+id/widgetNextButton"
						android:src="@drawable/d007_next_button"
						android:layout_height="60dip"
						android:layout_width="60dip"
						android:maxWidth="60dip"
						android:maxHeight="60dip"
						android:layout_gravity="center"
					/>
				</LinearLayout>			
			</LinearLayout>	
		</RelativeLayout>
		
				
</RelativeLayout>
